<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheSideChicks.View.AddNewsPage"
             xmlns:local="clr-namespace:TheSideChicks"
             x:DataType="viewmodel:NewsViewModel"
             xmlns:model="clr-namespace:TheSideChicks.Models"
             xmlns:viewmodel="clr-namespace:TheSideChicks.ViewModels"
             Title="{Binding Title}">


    <Grid
        
        ColumnDefinitions="20,*,20"
        ColumnSpacing="5"
        RowDefinitions="200,*,Auto"
        RowSpacing="0">

        <Image Aspect="AspectFill"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="CenterAndExpand"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Grid.Row="0"
               Grid.RowSpan="3"
               Source="textscreenbg.jpg"/>
        
        
        <Image Aspect="Fill"
               HeightRequest="150"
               WidthRequest="200"
               Grid.Column="0"
               Grid.ColumnSpan="2"
               Grid.Row="0"
               Source="{Binding bandLogo}"
            
                                       />
        <ScrollView Grid.Column="1"
                    Grid.Row="1">
            <VerticalStackLayout Grid.Column="1">
                <Label Text="Venue name"/>
                <Entry Placeholder="Title"
                       Text="{Binding News.title}"
                       />

                <Label Text="Owners name"/>
                <Entry Placeholder="Who is booking"
                       Text="{Binding News.details}"/>


                <Button Text="Take a picture" 
                Command="{Binding TakePhotoCommand}"
                IsEnabled="{Binding IsNotBusy}"
                VerticalOptions="End"
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>
                
 

            </VerticalStackLayout>



        </ScrollView>
        <ScrollView Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Grid.Row="3">

            <VerticalStackLayout    Padding="10">


                <Button Text="Add location" 
                Command="{Binding AddNewsCommand}"
                IsEnabled="{Binding IsNotBusy}"
                VerticalOptions="End"
                Grid.Row="1"
                Grid.Column="0"
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>

                <Button Text="go back" 
                Command="{Binding GoBackCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Style="{StaticResource ButtonOutline}"
                Margin="8"/>


            </VerticalStackLayout>



        </ScrollView>




        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="CenterAndExpand"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="2"/>

    </Grid>

</ContentPage>
